{% extends 'admin/admin.html.twig' %}

{% block title %}Allergen index{% endblock %}



{% block content %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <h1 class=titleAdmin>Allergen index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for allergen in allergens %}
            <tr>
                <td>{{ allergen.id }}</td>
                <td>{{ allergen.name }}</td>
                <td>
                    <a href="{{ path('allergen_show', {'id': allergen.id}) }}">show</a>
                    <a href="{{ path('allergen_edit', {'id': allergen.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btnLarge" href="{{ path('allergen_new') }}">Create new</a>
    <style>
        .table td,.table th{
            width:calc(100%/3);
        }
    </style>
{% endblock %}
