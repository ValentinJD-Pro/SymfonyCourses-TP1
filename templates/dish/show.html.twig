{% extends 'base.html.twig' %}

{% block title %}Dish{% endblock %}

{% block body %}
    <h1 class=titleAdmin>Dish</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Calories</th>
                <th>Price</th>
                <th>Image</th>
                <th>Description</th>
                <th>Sticky</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.Name }}</td>
                <td>{{ dish.Calories }}</td>
                <td>{{ dish.Price }}</td>
                <td><img src="{{ dish.Image }}" alt="img"></td>
                <td>{{ dish.Description }}</td>
                <td>{{ dish.Sticky ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="adminBtn" href="{{ path('dish_index') }}">back to list</a>

    <a class="adminBtn" href="{{ path('dish_edit', {'id': dish.id}) }}">edit</a>

    <div class="adminDel">
    {{ include('dish/_delete_form.html.twig') }}
    </div>
{% endblock %}
