{% extends 'base.html.twig' %}

{% block title %}Restaurant - Carte{% endblock %}




{% block content %}
    <a class=retourBtn href="/">Retour</a>
    <ul id="carte">
    {% for category in categories %}
        <li>
            <h1><a href="/carte/{{ category.id }}">{{ category.name }}</a></h1>

            <ul>
                {% set count=0 %}
                {% for dish in dishes %}
                    {% if dish.category.id == category.id %}
                        {% set count=count+1 %}

                    {% endif %}

                {% endfor %}
                <li>( {{ count }} )</li>
            </ul>
        </li>
    {% endfor %}
    </ul>
{% endblock %}