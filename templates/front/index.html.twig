{% extends 'base.html.twig' %}

{% block title %}Restaurant - Index{% endblock %}

{% block style %}
   <style>
      .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
      .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
   </style>
{% endblock %}

{% block content %}
   <h2 id="titleMoment">Nos plats du moment : </h2>
   <div id="moment">
      {{ render(controller('App\\Controller\\BlockController::dayDishesAction', {cat: 4})) }}
      {{ render(controller('App\\Controller\\BlockController::dayDishesAction', {cat: 5})) }}
      {{ render(controller('App\\Controller\\BlockController::dayDishesAction', {cat: 6})) }}
   </div>

{% endblock %}


